MCTSAgent.avoid_loops = False
MCTSAgent.discount = 0.99
MCTSAgent.graph_mode = False
MCTSAgent.loop_penalty = 0
MCTSAgent.n_passes = 10
MCTSAgent.rate_new_leaves_fn = \
    @planning.agents.mcts.rate_new_leaves_with_value_network

