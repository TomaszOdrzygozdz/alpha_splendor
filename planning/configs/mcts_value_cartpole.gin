# ==============================================================================
KerasNetwork.loss = 'binary_crossentropy'
KerasNetwork.metrics = ['accuracy']
KerasNetwork.model_fn = @planning.networks.keras.mlp
KerasNetwork.optimizer = 'adam'
KerasNetwork.train_callbacks = None

